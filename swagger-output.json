"/api/portfolio/update/{id}": {
  "put": {
    "tags": ["Portfolio"],
    "summary": "Update portfolio",
    "description": "Updates portfolio details with optional new thumbnail and showroom images",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "type": "string",
        "description": "Portfolio ID"
      },
      {
        "in": "formData",
        "name": "title",
        "type": "string",
        "required": false
      },
      {
        "in": "formData",
        "name": "titleColor",
        "type": "string",
        "required": false
      },
      {
        "in": "formData",
        "name": "detail",
        "type": "string",
        "required": false
      },
      {
        "in": "formData",
        "name": "isActive",
        "type": "boolean",
        "required": false
      },
      {
        "in": "formData",
        "name": "thumbnail",
        "type": "file",
        "required": false,
        "description": "New thumbnail image (max 2MB)"
      },
      {
        "in": "formData",
        "name": "mainImage",
        "type": "file",
        "required": false,
        "description": "New main image (max 2MB)"
      },
      {
        "in": "formData",
        "name": "showRoom",
        "type": "array",
        "items": { "type": "file" },
        "required": false,
        "collectionFormat": "multi",
        "description": "Multiple showroom images (each max 2MB). Old showroom images will be replaced."
      }
    ],
    "responses": {
      "200": { "description": "Portfolio updated successfully" },
      "400": { "description": "Validation error" },
      "404": { "description": "Portfolio not found" },
      "500": { "description": "Server error" }
    }
  }
},

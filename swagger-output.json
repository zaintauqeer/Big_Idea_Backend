    "/api/portfolio/create": {
  "post": {
    "tags": ["Portfolio"],
    "summary": "Create new portfolio",
    "description": "Creates a new portfolio entry with thumbnail + multiple showroom images",
    "parameters": [
      {
        "in": "formData",
        "name": "title",
        "type": "string",
        "required": true
      },
      {
        "in": "formData",
        "name": "titleColor",
        "type": "string",
        "required": true
      },
      {
        "in": "formData",
        "name": "detail",
        "type": "string",
        "required": true
      },
      {
        "in": "formData",
        "name": "isActive",
        "type": "boolean",
        "required": true
      },
      {
        "in": "formData",
        "name": "thumbnail",
        "type": "file",
        "required": true,
        "description": "Thumbnail image (max 2MB)"
      },
      {
        "in": "formData",
        "name": "mainImage",
        "type": "file",
        "required": true,
        "description": "Main image (max 2MB)"
      },
      {
        "in": "formData",
        "name": "showRoom",
        "type": "array",
        "items": { "type": "file" },
        "required": true,
        "collectionFormat": "multi",
        "description": "Multiple showroom images (each max 2MB)"
      }
    ],
    "responses": {
      "201": { "description": "Portfolio created successfully" },
      "400": { "description": "Validation error" },
      "500": { "description": "Server error" }
    }
  }
},
